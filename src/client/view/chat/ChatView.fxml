<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.view.chat.ChatViewController">
   <top>
      <Label fx:id="accountNameLabel" text="Chat with Others" BorderPane.alignment="TOP_CENTER">
         <font>
            <Font size="18.0" />
         </font>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
         <graphic>
            <Button alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#onRefreshBtn" text="Refresh" />
         </graphic>
      </Label>
   </top>
   <right>
      <VBox BorderPane.alignment="CENTER_LEFT">
         <children>
            <ListView fx:id="accountListView" onContextMenuRequested="#onContextRequested" onMousePressed="#onListMousePress" prefHeight="600.0" prefWidth="150.0">
               <VBox.margin>
                  <Insets bottom="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </ListView>
         </children></VBox>
   </right>
   <center>
      <VBox alignment="TOP_CENTER" BorderPane.alignment="CENTER">
         <children>
            <ListView fx:id="messagesListView" prefHeight="550.0">
               <VBox.margin>
                  <Insets left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </ListView>
            <HBox alignment="CENTER">
               <children>
                  <TextField fx:id="inputTextField" prefWidth="480.0" promptText="Aa">
                     <HBox.margin>
                        <Insets bottom="5.0" right="10.0" top="5.0" />
                     </HBox.margin>
                  </TextField>
                  <Button fx:id="sentBtn" mnemonicParsing="false" onAction="#onSentBtn" text="Sent" />
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
